@model List<PvPGamingWebsite.Models.ProjectStatus>
@{
    ViewBag.Title = "ProjectsStatus";
}

<h2>Projects Status</h2>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Controls</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>
                <a href="/Administration/DeleteProjectStatus?id=@(item.Id)">
                    <button class="btn btn-danger">
                        <span class="icon-trash"></span>
                    </button>
                </a>
            </td>
        </tr>
    }
</table>

<div style="width:300px;">
    <form method="post" action="/Administration/CreateProjectStatus">
        <h4>Add status:</h4>
        <input type="text" name="Title" class="form-control" placeholder="Title" />
        <br />
        <button class="button-small" type="submit">
            <span class="icon-ok"></span> Add status
        </button>
    </form>
</div>