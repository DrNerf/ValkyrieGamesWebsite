@model PvPGamingWebsite.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


<section id="loginForm" class="Login_form_wrapper">
    <h3 class="Login_title">@ViewBag.Title.</h3>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <ol>
            <li>
                <input type="text" class="input_" placeholder="Username" name="UserName">
            </li>
            <li>
                <input type="password" class="input_" placeholder="Password" name="Password">
            </li>
            <li>
                <input type="checkbox" name="RememberMe"/>
                <label for="RememberMe" class="Login_checkbox_title">Remember me?</label>
            </li>
        </ol>
        <input type="submit" value="Log in" class="Login_submit"/>
        <p class="Login_submit">
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </p>
    }
</section>

