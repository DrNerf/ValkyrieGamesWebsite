@model List<PvPGamingWebsite.Models.TeamMember>
@{
    ViewBag.Title = "Team";
}
<div class="template-wrapper">
    <div class="block block-page_header_block span12 first ">
	    <div class="span12 block-title centered">
		    <h2>A TOP NOTCH TEAM</h2>
		    <p>Creating amazing stuff to help you be the hero of the story.</p>
	    </div>
	    <div class="span12 block-divider"></div>
    </div>
						
    <!-- Members -->
    @foreach (var item in Model)
    {
        <div class="block block-team_member_block span3 cf" style="margin-bottom:2.9%;">
	        <div class="member">
		        <div class="member-social">
                    @if (!String.IsNullOrEmpty(item.Facebook))
                    {
                        <a data-original-title="Facebook" data-toggle="tooltip" href="@item.Facebook" class="icon-facebook-sign"></a>
                    }
                    @if (!String.IsNullOrEmpty(item.Linkedin))
                    {
                        <a data-original-title="Linkedin" data-toggle="tooltip" href="@item.Linkedin" class="icon-linkedin-sign"></a>
                    }
                    @if (!String.IsNullOrEmpty(item.Twitter))
                    {
						<a data-original-title="Twitter" data-toggle="tooltip" href="@item.Twitter" class="icon-twitter-sign"></a>
                    }
                    @if (!String.IsNullOrEmpty(item.Youtube))
                    {
						<a data-original-title="Youtube" data-toggle="tooltip" href="@item.Youtube" class="icon-youtube"></a>
                    }
                    
		        </div>
                @if (!String.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" alt="@item.FullName" onerror="brokenUrl(this);" />
                }
                else
                {
                    <img src="broken url" alt="@item.FullName" onerror="brokenUrl(this);" />
                }
		        <h3>@item.FullName</h3>
		        <span>@item.Position</span>
		        <div class="content">
                    <p>
                        @item.Information
                    </p>
		        </div>
		        <div class="bline"></div>
	        </div>
	    </div> 
    }
    <!-- Members end -->
    <div class="clear"></div>
</div>

@section head{
    <script>
        defaultImg = "@(Url.Content("~/Content/design/img/defaults/305x305.jpg"))";
        function brokenUrl(img) {
            jQuery(img).attr("src", defaultImg);
        }
    </script>
}